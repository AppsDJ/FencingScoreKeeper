<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fencers_bg_land">

    <LinearLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/red_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_flag_small" />

            <TextView
                android:id="@+id/fencer_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-6dp"
                android:text="00"
                android:textColor="#d11725"
                android:textSize="33sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="11dp"
                android:text="00:00"
                android:textColor="#1aba50"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/green_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_flag_small" />

            <TextView
                android:id="@+id/fencer_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-6dp"
                android:text="00"
                android:textColor="#d11725"
                android:textSize="33sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_area"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="Penalty Cards"
                android:textAlignment="viewEnd"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:src="@drawable/penalty_cards_land" />

            <TextView
                android:id="@+id/yellow_card_to_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="69dp"
                android:layout_marginTop="-30dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/red_card_to_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="28dp"
                android:layout_marginTop="-34dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:text="Penalty Cards"
                android:textAlignment="viewStart"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/penalty_cards_land" />

            <TextView
                android:id="@+id/yellow_card_to_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="-30dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/red_card_to_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="-34dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/active_game_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="182dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="123dp"
        android:minWidth="200dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/touche_on_A"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="toucheOnA"
                android:padding="0dp"
                android:text="TOUCHE !"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yellow_card_to_A_btn"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="giveYellowCardToA"
                android:padding="0dp"
                android:src="@drawable/yellow_card_btn"
                android:text="Yellow Card"
                android:textColor="#f8e83b"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/red_card_to_A_btn"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="giveRedCardToA"
                android:padding="0dp"
                android:src="@drawable/red_card_btn"
                android:text="Red Card"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/touche_on_B"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="toucheOnB"
                android:padding="0dp"
                android:text="TOUCHE !"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yellow_card_to_B_btn"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="giveYellowCardToB"
                android:padding="0dp"
                android:text="Yellow Card"
                android:textColor="#f8e83b"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/red_card_to_B_btn"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="giveRedCardToB"
                android:padding="0dp"
                android:src="@drawable/red_card_btn"
                android:text="Red Card"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="122dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resume"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="resetScore"
            android:text="Reset"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>